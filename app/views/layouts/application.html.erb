<!DOCTYPE html>
<html>
  <head>
    <title>IGClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="navbar navbar-expand-lg navbar-light bg-warning">
      <div class="container">
        <div class="home-logo">
          <%= link_to image_tag("instaclone.png",alt:"insta logo") , '#', id: "logo" %>
        </div>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   '#' %></li>
            <li><%= link_to image_tag("instauser.png",alt:"user logo", size:"30x30"), '#' %></li>
            <li><%= link_to "Post", '#', class: 'btn btn-info'%></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
    <%= yield %>
  </body>
</html>
