<h3>投稿の確認</h3>
<div class="row">
  <div class="col-md-6  col-md-offset-3">
    <%= form_with(model:@picture, local: true) do |f| %>
      <%= image_tag(@picture.image.thumb.url,class:"confirm_image")if @picture.image_url %>
      
      <%= f.hidden_field :image_cache %>
      <%= f.hidden_field :content %>
      
      <%= f.submit "投稿", class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6  col-md-offset-3">
    <%= form_with(model:@picture, url: new_picture_path, local:true, method: "get") do |f| %>
      <%= f.hidden_field :image_cache %>
      
      <%= f.submit "戻る", name: "back", class: 'btn btn-danger'%>
    <% end %>
  </div>
</div>
