<h1>新しく投稿する</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @picture, local: true, url: choose_new_or_edit) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :content %>
      <%= f.text_area :content, placeholder: "新規投稿...", class: 'form-control' %>

      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control'%>
      
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>